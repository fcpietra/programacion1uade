/*Hacer una función que permita insertar una sub-cadena en una cadena a partir de una posición dada.*/
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <string.h>
int main (){
	char cad1[30];
	char cad2[30];
	char cad3[30];
	int pos,i,cant=0,j=0;
	printf("ingrese una cadena\n");
	scanf("%s",cad1);
	printf("ingrese otra cadena\n");
	scanf("%s",cad3);
	printf("ingrese una posicion\n");
	scanf("%d",&pos);
	strcpy(cad2,&cad1[pos]);
	strcat(cad1,cad3);
	strcat(cad1,cad2);
	printf("%s\n",cad1);
	return 0;
}
	



